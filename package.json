{
  "name": "boiler-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile:run:android": "yarn m:android",
    "ios": "expo run:ios",
    "lint": "expo lint",
    "prepare": "husky",
    "prettier": "npx prettier . --write",
    "start": "yarn m:mobile:start",
    "test": "yarn m:mobile:test",
    "update-packages": "yarn upgrade-interactive",
    "watch-packages": "yarn workspaces foreach -A run build"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "yarn prettier"
    ],
    "**/*": "prettier --ignore-unknown --write"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "^0.76.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/react": "18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-package-json": "^0.18.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.11",
    "lodash": "^4.17.21",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.5",
    "react-test-renderer": "18.3.1",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.15.0"
  },
  "packageManager": "yarn@4.5.3"
}
